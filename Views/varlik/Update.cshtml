@model varlik

<div style="width: 350px; margin-left: 450px;">
    <form method="post" asp-controller="varlik" asp-action="Update">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div>
            <label for="Name">Varlık Adı:</label>
            <input name="Name" type="text" class="form-control" value="@Model.Name" />
        </div>
        <div>
            <label for="Tutari">Varlık Tutarı:</label>
            <input name="Tutari" type="text" class="form-control" value="@Model.Tutari" />
        </div>
        <div>
            <label for="Tarihi">Tarih:</label>
            <input name="Tarihi" type="month" class="form-control" value="@Model.Tarihi.ToString("yyyy-MM")" />
        </div>
        <button type="submit" style="margin-top: 10px; background-color: darkorange;">Kaydet</button>
    </form>
</div>